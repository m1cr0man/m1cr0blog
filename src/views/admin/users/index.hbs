{{> header }}
<header class="pure-u-1">
	<h1>All users</h1>
	<a href="add" class="pure-button pure-button-success">Add</a>
	<br>
	<br>
</header>

<section class="pure-u-1">
	<table class="pure-table pure-table-bordered pure-table-striped">
		<thead>
		<tr>
			<th>Username</th>
			<th>API Token</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		{{# each users }}
			<tr>
				<td>{{ this.name }}</td>
				<td>{{ this.token }}</td>
				<td>
					<a href="{{ this.id }}/" class="pure-button pure-button-secondary">Edit</a>
					<a href="{{ this.name }}/regenToken" class="pure-button pure-button-warning">Regen Token</a>
					<a href="{{ this.name }}/delete" class="pure-button pure-button-error" methods="DELETE">Delete</a>
				</td>
			</tr>
		{{/each}}
		</tbody>
	</table>
</section>
{{> footer }}
